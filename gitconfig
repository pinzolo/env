[user]
	name = pinzolo
	email = pinzolo@gmail.com
[core]
	quotepath = false
	editor = vim
	excludesfile = /Users/pinzolo/.gitignore
	precomposeunicode = true
	attributesfile = /Users/pinzolo/.gitattributes
[color]
	ui = auto
[alias]
	ad = add --verbose
	co = checkout
	cm = commit
	st = status --branch --short
	br = branch
	brr = branch --remote
	bra = branch --all
  lo = log --oneline
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short # log graph
	mr = merge
	gr = grep --line-number --show-function --color --heading --break
	rb = rebase
	rbm = rebase master
	rbi = rebase --interactive
  rbim = rebase --interactive master
	show-ignored = ls-files --exclude-standard --others --ignored
  pull-dry-run  = !"git fetch origin; B=$(git rev-parse --abbrev-ref HEAD); git diff --stat --summary ${B}..origin/${B}"
  alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort
  refresh= !git fetch origin && git remote prune origin
[merge]
	ff = false
	tool = vimdiff
[push]
	default = current
[pull]
	rebase = true
[ghq]
	root = ~/src
[rebase]
	autosquash = true
	autostash = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[mergetool]
	prompt = false
