[user]
	name = pinzolo
	email = pinzolo@gmail.com
[core]
	quotepath = false
	editor = vim
	excludesfile = /Users/pinzolo/.gitignore
	precomposeunicode = true
	attributesfile = /Users/pinzolo/.gitattributes
[color]
	ui = auto
[alias]
	ad = add --verbose
	co = checkout
	cm = commit
	st = status --branch --short
	br = branch
	brr = branch --remote
	bra = branch --all
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	mr = merge
	gr = grep --line-number --show-function --color --heading --break
	rb = rebase
	rbm = rebase master
	rbi = rebase --interactive
	show-ignored = ls-files --exclude-standard --others --ignored
  pull-dry-run  = !"git fetch origin; B=$(git rev-parse --abbrev-ref HEAD); git diff --stat --summary ${B}..origin/${B}"
[merge]
	ff = false
	tool = vimdiff
[push]
	default = current
[pull]
	rebase = true
[ghq]
	root = ~/src
[rebase]
	autosquash = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[mergetool]
	prompt = false
